{
    "manifest_version": 3,
    "name": "AP® Exam Score Reveal",
    "version": "1.0",
    "description": "Make AP® score release day fun with customizable sounds and animations.",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["tabs", "scripting", "storage"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": "icons/icon128.png"
    },
    "content_scripts": [
        {
        "matches": ["https://apstudents.collegeboard.org/view-scores"],
        "js": ["contentScript.js"],
        "css": ["hide-scores.css"],
        "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
        "resources": ["default_sounds/*.mp3", "default_animations/*.gif"],
        "matches": ["https://apstudents.collegeboard.org/*"]
        }
    ],
    "host_permissions": ["https://apstudents.collegeboard.org/*"]
}